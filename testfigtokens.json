{
  "$schema": "https://tokens.studio/schemas/tokens.schema.json",
  "$metadata": {
    "tokenSetOrder": [
      "color",
      "typography",
      "fontFamily",
      "sizing",
      "spacing",
      "radius",
      "borderWidth",
      "opacity",
      "boxShadow"
    ]
  },

  "color": {
    "brand": {
      "primary":   { "value": "#0A84FF", "type": "color" },
      "secondary": { "value": "#30D158", "type": "color" },
      "accent":    { "value": "#FF375F", "type": "color" }
    },
    "surface": {
      "background": { "value": "#FFFFFF", "type": "color" },
      "foreground": { "value": "#000000", "type": "color" },
      "muted":      { "value": "#8E8E93", "type": "color" }
    },
    "state": {
      "success": { "value": "#34C759", "type": "color" },
      "warning": { "value": "#FF9F0A", "type": "color" },
      "error":   { "value": "#FF3B30", "type": "color" }
    }
  },

  "typography": {
    "h1": {
      "value": {
        "fontFamily": "Inter",
        "fontWeight": "700",
        "fontSize": "32px",
        "lineHeight": "40px",
        "letterSpacing": "0%"
      },
      "type": "typography"
    },
    "body/base": {
      "value": {
        "fontFamily": "Inter",
        "fontWeight": "400",
        "fontSize": "16px",
        "lineHeight": "24px",
        "letterSpacing": "0%"
      },
      "type": "typography"
    },
    "body/big": {
      "value": {
        "fontFamily": "Inter",
        "fontWeight": "400",
        "fontSize": "18px",
        "lineHeight": "28px",
        "letterSpacing": "0%"
      },
      "type": "typography"
    }
  },

  "fontFamily": {
    "primary":   { "value": "Inter", "type": "fontFamily" },
    "secondary": { "value": "SF Pro Text", "type": "fontFamily" },
    "mono":      { "value": "SF Mono", "type": "fontFamily" }
  },

  "sizing": {
    "xs": { "value": "4px",  "type": "sizing" },
    "sm": { "value": "8px",  "type": "sizing" },
    "md": { "value": "16px", "type": "sizing" },
    "lg": { "value": "24px", "type": "sizing" },
    "xl": { "value": "32px", "type": "sizing" }
  },

  "spacing": {
    "xs": { "value": "4px",  "type": "spacing" },
    "sm": { "value": "8px",  "type": "spacing" },
    "md": { "value": "16px", "type": "spacing" },
    "lg": { "value": "24px", "type": "spacing" },
    "xl": { "value": "32px", "type": "spacing" }
  },

  "radius": {
    "none": { "value": "0px",   "type": "borderRadius" },
    "sm":   { "value": "4px",   "type": "borderRadius" },
    "md":   { "value": "8px",   "type": "borderRadius" },
    "lg":   { "value": "16px",  "type": "borderRadius" },
    "pill": { "value": "999px", "type": "borderRadius" }
  },

  "borderWidth": {
    "hairline": { "value": "1px", "type": "borderWidth" },
    "thick":    { "value": "2px", "type": "borderWidth" }
  },

  "opacity": {
    "transparent": { "value": "0",   "type": "opacity" },
    "disabled":    { "value": "0.4", "type": "opacity" },
    "overlay":     { "value": "0.8", "type": "opacity" }
  },

  "boxShadow": {
    "sm": {
      "value": [
        { "x": "0px", "y": "1px", "blur": "2px", "spread": "0px", "color": "#0000001A" }
      ],
      "type": "boxShadow"
    },
    "md": {
      "value": [
        { "x": "0px", "y": "2px", "blur": "8px", "spread": "0px", "color": "#00000029" }
      ],
      "type": "boxShadow"
    }
  }
}
